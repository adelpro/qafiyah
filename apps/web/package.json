{
  "name": "@qaf/web",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "check": "pnpm run type-check && pnpm run lint",
    "pages:build": "pnpm next-on-pages",
    "preview": "pnpm pages:build && wrangler pages dev",
    "deploy": "pnpm pages:build && wrangler pages deploy",
    "cf-typegen": "pnpx wrangler types --env-interface CloudflareEnv env.d.ts",
    "format": "pnpx prettier --write ."
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "pnpx prettier --write"
    ],
    "*.{json,md,mdx,css}": [
      "pnpx prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no -- pnpm lint-staged"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
